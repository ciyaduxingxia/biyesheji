<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:id="@+id/rl_outboundorder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/iv_outboundorder_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/iv_outboundorder_arrow_back"
            android:text="@string/main_outin_outboundorder"
            android:textSize="24sp" />
    </RelativeLayout>

    <View
        android:id="@+id/div_tab_bar1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rl_outboundorder"
        android:background="@color/black" />
    
    <Spinner
        android:id="@+id/sp_out_pickorder_pickorderID"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/div_tab_bar1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:spinnerMode="dropdown" />
    
    <EditText
        android:id="@+id/et_out_outboundorder_oborderID"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/sp_out_pickorder_pickorderID"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:hint="@string/main_outin_outboundorder_obID"
        android:inputType="text" />
    
    <EditText
        android:id="@+id/et_out_outboundorder_pickerID"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/et_out_outboundorder_oborderID"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:hint="@string/main_outin_outboundorder_pickerID"
        android:inputType="text" />
    
    <Spinner
        android:id="@+id/sp_out_outboundorder_operatorID"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/et_out_outboundorder_pickerID"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/et_out_outboundorder_itemID"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/sp_out_outboundorder_operatorID"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:hint="@string/main_outin_inboundorder_itemID"
        android:inputType="text" />
    
    <EditText
        android:id="@+id/et_out_outboundorder_count"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/et_out_outboundorder_itemID"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:hint="@string/main_outin_pcorder_count"
        android:inputType="text" />
    
    <EditText
        android:id="@+id/et_out_outboundorder_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/et_out_outboundorder_count"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:hint="@string/main_outin_iborder_date"
        android:inputType="date" />
    
    <Button
        android:id="@+id/bg_out_outboundorder_summit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/et_out_outboundorder_date"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_login_submit"
        android:gravity="center"
        android:text="@string/main_outin_pcorder_submit"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16" />

</RelativeLayout>
