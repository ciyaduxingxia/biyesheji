<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outin_pending_pcorder_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:id="@+id/rl_pending_pcorder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/iv_pending_pcorder_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/iv_pending_pcorder_arrow_back"
            android:text="@string/main_outin_pending_purchaseorder"
            android:textSize="24sp" />
    </RelativeLayout>
    
    <View
        android:id="@+id/div_tab_bar1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rl_pending_pcorder"
        android:background="@color/black" />
    
    <LinearLayout
        android:id="@+id/pending_pcorder"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/div_tab_bar1"
        android:background="@color/blue"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pending_pcorder_t1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/main_outin_pcorder_pcorderID" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/pending_pcorder_t2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/main_outin_pcorder_itemName" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/pending_pcorder_t3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/main_outin_pcorder_date" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/pending_pcorder_t4"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/main_outin_pcorder_state" />
    </LinearLayout>
    
    <View
        android:id="@+id/line_below_pending_pcorder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/pending_pcorder"
        android:background="#ffffff" />

    <ListView
        android:id="@+id/pending_pcorder_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_below_pending_pcorder" >
    </ListView>

</RelativeLayout>
