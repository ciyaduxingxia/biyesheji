<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/et_out_pickorder_pickorderID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/div_tab_bar1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:hint="@string/main_outin_pickorder_pickorderID"
            android:inputType="text" />

        <Spinner
            android:id="@+id/sp_out_pickorder_managerID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/et_out_pickorder_pickorderID"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/sp_out_pickorder_itemID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/sp_out_pickorder_managerID"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:focusableInTouchMode="false"
            android:hint="@string/item_listview_item1"
            android:inputType="text" />

        <Spinner
            android:id="@+id/sp_out_pickorder_pickerID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/sp_out_pickorder_itemID"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/et_out_pickorder_itemName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/sp_out_pickorder_pickerID"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:hint="@string/main_outin_pcorder_itemName"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_out_pickorder_count"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/et_out_pickorder_itemName"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:hint="@string/main_outin_pcorder_count"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_out_pickorder_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/et_out_pickorder_count"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:hint="@string/main_outin_pickorder_date"
            android:inputType="date" />

        <Button
            android:id="@+id/bg_out_pickorder_summit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/et_out_pickorder_date"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_login_submit"
            android:gravity="center"
            android:text="@string/main_outin_pcorder_submit"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16" />
    </RelativeLayout>

</ScrollView>