<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ly_warehouse_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_check"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/warehouse_tab_menu_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/main_warehouse_check"
            android:textColor="@drawable/warehouse_tab_menu_text"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/txt_inquiry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/warehouse_tab_menu_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/main_warehouse_inquiry"
            android:textColor="@drawable/warehouse_tab_menu_text"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/txt_alarm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/warehouse_tab_menu_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/main_warehouse_alarm"
            android:textColor="@drawable/warehouse_tab_menu_text"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/ly_warehouse_tab_bar"
        android:background="@color/gray" />
    
    <android.support.v4.view.ViewPager
        android:id="@+id/vpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/div_tab_bar" />

</RelativeLayout>