<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:id="@+id/rl_pickorder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/iv_pickorder_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/iv_pickorder_arrow_back"
            android:text="@string/main_outin_pickorder"
            android:textSize="24sp" />
    </RelativeLayout>
    
    <View
        android:id="@+id/div_tab_bar1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rl_pickorder"
        android:background="@color/black" />
    
    <TextView
        android:id="@+id/tv_out_new_pickorder"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/div_tab_bar1"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/main_outin_new_pickorder" />
    
    <TextView
        android:id="@+id/tv_out_look_pickorder"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/tv_out_new_pickorder"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/main_outin_look_pickorder"
        android:textSize="@dimen/font_10"
        android:textColor="@color/blue" />
    
    <TextView
        android:id="@+id/tv_out_edit_pickorder"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_out_look_pickorder"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:text="@string/main_outin_edit_pickorder"
        android:textSize="@dimen/font_18"
        android:textColor="@color/orange" />
    
    <FrameLayout
        android:id="@+id/fl_outin_pickorder_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/div_tab_bar1" >
        
    </FrameLayout>

</RelativeLayout>
